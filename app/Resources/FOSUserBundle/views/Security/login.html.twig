{% trans_default_domain 'FOSUserBundle' %}

{% extends "base.html.twig" %}

{% block fos_user_content %}
    <h1 style="text-align: center; margin-top: 10px;">Formulaire de connexion</h1>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

<div class="well" style="width: 50%;margin: auto;text-align: center;margin-top: 50px;">
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="login-container">
            <form class="form-horizontal">
                <div class="form-group row">
                    <label for="username">Username</label>
                    <div class="col-10">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password">Password</label>
                    <div class="col-10">
                        <input type="password" id="password" name="_password" required="required" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password">Remember</label>
                    <div class="col-10">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-10">
                        <input type="submit" class="login login-submit" id="_submit" name="_submit" value="Submit" />
                    </div>
                </div>
            </form>
        </div>
    </form>
</div>
{% endblock fos_user_content %}

